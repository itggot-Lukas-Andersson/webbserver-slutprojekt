<header>
<div class="sort">
    <a href="/home"><h1>New</h1></a>
	<a href="/title"><h1>Alphabetical</h1></a>
	<a href="/favorites"><h1>Favorite</h1></a>
	<a href="/post"><h1>New Post</h1></a>
</div>
<form action="/logout" method="POST">
	<input type="submit" value="Logout" class="logout">
</form>
</header>
<div class="content">
	<%posts.each do |i|%>
		<div class="boxpost">
			<div class="box1post">
				<p class="titlepost"><%= i[2]%></p>
				<p class="descpost"><%= i[3]%></p>
				<p class="creatorpost"><%= i[1]%></p>
			</div>
			<form class="fav" action="/view/<%=id%>/favorite" method="POST"><input class="favbutton" type="submit"><i <%= if favo[0] then "style='color:yellow;'" end%> class="material-icons">star</i></form>
			</div>
    <%end%>
    <%comments.each do |i|%>
		<div class="box">
			<div class="box1">
				<p class="title"><%= i[1]%></p>
				<p class="desc"><%= i[2]%></p>
			</div>
			</div>
	<%end%>
    <form class="commentform" action="/view/<%= id%>/comment" method="POST">
        <textarea maxlength="400" id="contentcomment" name="content" placeholder="text..."></textarea>
        <input class="publishbtn" type="submit" value="Publish">
    </form>

</div>