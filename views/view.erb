<header>
<a href="/"><h1>Hem</h1></a>
</header>
<div class="content">
	<%posts.each do |i|%>
		<div class="box">
			<div class="box1">
				<p class="title"><%= i[2]%></p>
				<p class="desc"><%= i[3]%></p>
			</div>
			<p class="creator"><%= i[1]%></p>
			<div class="box2">
				<p class="likes"><%= i[4]%></p>
			</div>
			</div>
    <%end%>
    <%comments.each do |i|%>
		<div class="box">
			<div class="box1">
				<p class="title"><%= i[1]%></p>
				<p class="desc"><%= i[2]%></p>
			</div>
			<div class="box2">
				<p class="likes"><%= i[3]%></p>
			</div>
			</div>
    <%end%>
</div>