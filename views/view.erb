<header>
<a href="/home" class="home"><h1>Hem</h1></a>
<form action="/logout" method="POST">
	<input type="submit" value="Logout" class="logout">
</form>
</header>
<div class="content">
	<%posts.each do |i|%>
		<div class="box">
			<div class="box1">
				<p class="title"><%= i[2]%></p>
				<p class="desc"><%= i[3]%></p>
			</div>
			<p class="creator"><%= i[1]%></p>
			<div class="box2">
				<p class="likes"><%= i[4]%></p>
			</div>
			</div>
    <%end%>
    <%comments.each do |i|%>
		<div class="box">
			<div class="box1">
				<p class="title"><%= i[1]%></p>
				<p class="desc"><%= i[2]%></p>
			</div>
			<div class="box2">
				<p class="likes"><%= i[3]%></p>
			</div>
			</div>
	<%end%>
    <form class="commentform" action="/view/<%= id%>/comment" method="POST">
        <textarea id="contentcomment" name="content" placeholder="text..."></textarea>
        <input id="publish" type="submit" value="Publish">
    </form>

</div>